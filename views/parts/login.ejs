<link rel="stylesheet" href="/stylesheets/login.css    ">


<div class="login-wrap">
    <div class="login-html">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user"
                    aria-selected="true">
                    <span class="tab">UsuÃ¡rio</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="posto-tab" data-toggle="tab" href="#posto" role="tab" aria-controls="posto"
                    aria-selected="false">
                    <span class="tab">Empresa</span>
                </a>
            </li>
        </ul>
        <div class="login-form">
            <div class="hr"></div>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="user-tab">
                    <form action="/usuario/logar" method="POST">
                        <div class="sign-in-htm">
                            <div class="group">
                                <label for="user" class="label">E-mail</label>
                                <input id="user" type="email" class="input" name="email" required>
                            </div>
                            <div class=" group">
                                <label for="passUser" class="label">Senha</label>
                                <input id="passUser" type="password" class="input" data-type="password" name="senha"
                                    required>
                            </div>
                            <div class="group">
                                <input id="checkUser" type="checkbox" class="check" name="logado" checked>
                                <label for="checkUser"><span class="icon"></span> Mantenha-me conectado</label>
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Entrar">
                                <% if (error) { %>

                                <div class="mt-3 text-center"> <%= error %> </div>
                                <% } %>
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <a href="#forgot">Esqueceu a Senha?</a><br><br>
                                <a href="/cadastro">
                                    Cadastrar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane fade" id="posto" role="tabpanel" aria-labelledby="posto-tab">
                    <form action="/dashboard-empresa" method="">
                        <div class="sign-up-htm">
                            <div class="group">
                                <label for="email" class="label">E-mail</label>
                                <input id="email" name="email" type="email" class="input">
                            </div>
                            <div class="group">
                                <label for="pass" class="label">Senha</label>
                                <input id="pass" name="senha" type="password" class="input" data-type="password">
                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" checked>
                                <label for="check"><span class="icon"></span> Mantenha-me conectado</label>
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Entrar">
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <a href="#forgot">Esqueceu a Senha?</a><br><br>
                                <a href="/cadastro">
                                    Cadastrar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>