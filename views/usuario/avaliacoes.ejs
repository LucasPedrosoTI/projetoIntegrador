<%- include('../parts/head', {title: "Dashboard - Meu Posto"}) %>
<link rel="stylesheet" href="/stylesheets/login.css    " />
<link rel="stylesheet" href="/stylesheets/dashboard-usuario.css" />

<header>
    <%- include('../parts/navbar') %>
</header>

<main>
    <div class="dashboard-container">

        <%- include('../parts/navbar-usuario') %>

        <section id="comentarios" class="comentarios" style="display: block;">
            <h2>Meus Comentários</h2>

            <div class="comentarios-container">

                <div class="card">
                    <div class="logo-empresa">
                        <img src="/images/petrobras.png" alt="petrobras">
                    </div>
                    <form action="" method="">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </form>
                    <form action="" method="">
                        <button type="button" class="edit">
                            <i class="far fa-edit"></i>
                        </button>
                    </form>
                    <div class="card-body">
                        <div class="title">
                            <h5 class="card-title">Posto Fulano &mdash;</h5>
                            <span class="card-text">Ruas dos Fulanos, 000</span>
                        </div>
                        <div class="produto-avaliacao">
                            <div class="avaliacao-estrelas">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </div>

                            <div class="avaliacao-comentario">
                                <h6>Comentário:</h6>
                                <p>
                                    Gasolina meio fraca!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="logo-empresa">
                        <img src="/images/ipiranga.png" alt="petrobras">
                    </div>
                    <form action="" method="">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </form>
                    <form action="" method="">
                        <button type="button" class="edit">
                            <i class="far fa-edit"></i>
                        </button>
                    </form>
                    <div class="card-body">
                        <div class="title">
                            <h5 class="card-title">Posto Fulano &mdash;</h5>
                            <span class="card-text">Ruas dos Fulanos, 000</span>
                        </div>
                        <div class="produto-avaliacao">
                            <div class="avaliacao-estrelas">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>

                            <div class="avaliacao-comentario">
                                <h6>Comentário:</h6>
                                <p>
                                    O posto é show!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</main>

