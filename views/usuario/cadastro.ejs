<%- include('../parts/head', {title: "Dashboard - Meu Posto"}) %>
<link rel="stylesheet" href="/stylesheets/login.css    " />
<link rel="stylesheet" href="/stylesheets/dashboard-usuario.css" />

<header>
    <%- include('../parts/navbar') %>
</header>

<main>
    <div class="dashboard-container">

        <%- include('../parts/navbar-usuario') %>

        <section id="cadastro" class="cadastro" style="display: block;">
            <form class="form" action="/usuario/dashboard/cadastro?_method=PUT" method="POST">
                <h1>Alterar Cadastro</h1>
                <div class="form-container">
                    <div class="form-group">
                        <input class="form-control mt-3" type="email" placeholder="Novo Email" name="email"
                            value="<%= user.email %>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" />

                        <input class="form-control mt-3" type="text" placeholder="Alterar Nome" name="nome" id="nome"
                            value="<%=user.nome%>" />

                        <input class="form-control mt-3" type="text" placeholder="Alterar sobrenome" name="sobrenome"
                            id="sobrenome" value="<%=user.sobrenome%>" />

                        <input class="form-control mt-3" type="password" placeholder="Senha" name="senha" required />

                        <button type="submit" class="btn btn-warning">Salvar</button>

                    </div>

                </div>
            </form>
        </section>

    </div>
</main>

<%- include('../parts/foot') %>