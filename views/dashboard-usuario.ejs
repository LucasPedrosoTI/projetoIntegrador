<%- include('parts/head', {title: "Dashboard - Meu Posto"}) %>
<link rel="stylesheet" href="/stylesheets/login.css    " />
<link rel="stylesheet" href="/stylesheets/dashboard-usuario.css" />
<link rel="stylesheet" href="/stylesheets/navbar-usuario-home.css">

<header>
  <%- include('parts/navbar') %>
</header>

<main>
  <div class="dashboard-container">
    <%- include('./parts/navbar-usuario') %>


    <% if (msg) { %>

    <div class="toast mr-3" role="alert" style="position: absolute; top: 5; right: 0;">
      <div class="toast-header">
        <img src="/images/icone-semfundo.png" class="rounded mr-2" alt="icone" width="25" height="25">
        <strong class="mr-auto">Meu Posto</strong>
        <small class="mx-3">Agora</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        <%=msg%>
      </div>
    </div>
    <% } %>

  </div>
</main>

<%- include('parts/foot') %>

<script>
  $('.toast').toast({ autohide: false }).toast('show')
</script>